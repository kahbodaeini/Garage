<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/back_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:scrollbarSize="@android:dimen/app_icon_size"
        android:src="@drawable/back_arrow"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="405dp"
        android:layout_height="0dp"
        android:layout_marginBottom="33dp"
        android:text="SERVICES"
        android:textAlignment="center"
        android:textColor="#C80D0D"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/repairment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_image_button" />

    <Button
        android:id="@+id/repairment"
        android:layout_width="156dp"
        android:layout_height="57dp"
        android:layout_marginBottom="16dp"
        android:text="repairment"
        app:layout_constraintBottom_toTopOf="@+id/buy_head_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buy_head_light"
        android:layout_width="156dp"
        android:layout_height="57dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="16dp"
        android:spinnerMode="dialog"
        android:text="Buy head light"
        app:layout_constraintBottom_toTopOf="@+id/improve_engine"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/improve_engine"
        android:layout_width="156dp"
        android:layout_height="57dp"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="16dp"
        android:text="improve engine"
        app:layout_constraintBottom_toTopOf="@+id/buy_leather"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buy_leather"
        android:layout_width="156dp"
        android:layout_height="57dp"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="16dp"
        android:text="Buy leather"
        app:layout_constraintBottom_toTopOf="@+id/buy_exhaust"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buy_exhaust"
        android:layout_width="156dp"
        android:layout_height="57dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="16dp"
        android:text="buy exhaust"
        app:layout_constraintBottom_toTopOf="@+id/change_color"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/change_color"
        android:layout_width="156dp"
        android:layout_height="57dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="16dp"
        android:text="change color"
        app:layout_constraintBottom_toTopOf="@+id/buy_ring"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buy_ring"
        android:layout_width="156dp"
        android:layout_height="57dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:text="Buy Ring"
        app:layout_constraintBottom_toTopOf="@+id/car_wash"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/car_wash"
        android:layout_width="156dp"
        android:layout_height="57dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="104dp"
        android:layout_marginTop="16p"
        android:text="car wash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>